<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="matutu.giosan777.ge.entity.UsersEntity" table="users" schema="furti">
        <id name="id">
            <column name="id" sql-type="int(10) unsigned"/>
        </id>
        <property name="mail">
            <column name="mail" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="pass">
            <column name="pass" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>